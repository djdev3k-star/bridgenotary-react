# Environment Variables Template
# Copy this file to .env.development and .env.production and fill in your values

# Frontend Configuration
VITE_APP_ENV=development
VITE_API_URL=http://localhost:5000
VITE_PUBLIC_URL=http://localhost:3000

# Feature Flags
VITE_ENABLE_APOSTILLE=true

# Odoo Backend Configuration (Server Side Only - NOT in frontend)
# Do NOT expose ODOO_FORM_TOKEN or API credentials in VITE_ variables
# These must be kept secret on the backend/Netlify functions
ODOO_URL=https://yourcompany.odoo.com
ODOO_DB=your_database_name
ODOO_USERNAME=your_odoo_user@example.com
ODOO_API_KEY=your_odoo_api_key_or_password
ODOO_FORM_TOKEN=your_secret_token_here

# Backend Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Proof API Configuration
# Get your API keys from: https://app.notarize.proof.com/settings/api
PROOF_API_KEY=your_api_key_here
PROOF_ENVIRONMENT=test  # 'test' or 'production'
PROOF_BASE_URL=https://api-fairfax.notarize.proof.com  # Test environment
# Production URL: https://api.notarize.proof.com
PROOF_WEBHOOK_SECRET=your_webhook_secret_here
